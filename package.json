{
   "name": "devtter",
   "private": true,
   "scripts": {
      "dev": "next dev",
      "build": "next build",
      "start": "next start",
      "lint": "next lint"
   },
   "dependencies": {
      "@chakra-ui/react": "1.8.3",
      "@emotion/react": "11.7.1",
      "@emotion/styled": "11.6.0",
      "cloudinary": "1.28.1",
      "firebase": "9.6.6",
      "framer-motion": "6.2.6",
      "next": "12.1.0",
      "next-auth": "4.2.1",
      "react": "17.0.2",
      "react-dom": "17.0.2",
      "react-icons": "4.3.1",
      "react-textarea-autosize": "8.3.3",
      "swr": "1.2.1",
      "wouter": "2.8.0-alpha.2",
      "zustand": "3.7.0"
   },
   "devDependencies": {
      "eslint": "8.9.0",
      "eslint-config-standard": "16.0.3",
      "eslint-plugin-import": "2.25.4",
      "eslint-plugin-node": "11.1.0",
      "eslint-plugin-promise": "6.0.0",
      "eslint-plugin-react": "7.28.0"
   },
   "eslintConfig": {
      "env": {
         "browser": true,
         "es2021": true,
         "node": true
      },
      "extends": [
         "plugin:react/recommended",
         "standard"
      ],
      "parserOptions": {
         "ecmaFeatures": {
            "jsx": true
         },
         "ecmaVersion": "latest",
         "sourceType": "module"
      },
      "plugins": [
         "react"
      ],
      "rules": {
         "react/react-in-jsx-scope": "off",
         "react/prop-types": "off",
         "indent": "off",
         "space-before-function-paren": "off",
         "no-unused-vars": "warn",
         "multiline-ternary": "off"
      }
   },
   "prettier": {
      "semi": false,
      "singleQuote": true,
      "trailingComma": "none",
      "tabWidth": 3,
      "arrowParens": "avoid"
   }
}
